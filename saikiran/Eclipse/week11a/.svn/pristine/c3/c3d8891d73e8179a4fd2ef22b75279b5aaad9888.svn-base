<!DOCTYPE html>
<html>
	<head>
		<title>
			WEEK END TASK-11
        </title>
        <script src="operations.js"></script>
        <link rel="stylesheet" type="text/css" href="style.css">
        <script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
       
        <script type="text/javascript">
            $(document).ready(function(){
                $("#add").click(function(){
                    $("#id01").toggle();
                });
                $("#edit").click(function(){
                    $("#id02").toggle();
                    editDataInTableAndRemoveItFromJson()
                });
                $("#display").click(function(){
                    var radios = document.getElementsByName("taskDetails");
                    for (var i = 0; i < radios.length; i++) {
                        if (radios[i].type === 'radio' && radios[i].checked) {      
                            break;
                        }
                    }
                    if(i==radios.length){
                        alert("please select a radio button");
                    }
                    else{
                        var json=JSON.stringify(array[i]);
                        alert("Json String: "+json);
                    }
                });
                $("#delete").click(function(){
                    var radios = document.getElementsByName("taskDetails");
                    for (var i = 0; i < radios.length; i++) {
                        if (radios[i].type === 'radio' && radios[i].checked) {    
                            break;
                        }
                    }
                    if(i==radios.length){
                        alert("please select a radio button");
                    }
                    if (i > -1) {
                        array.splice(i, 1);
                    }
                    var row = document.getElementById(tobeDeletedRow.id);
                    row.parentNode.removeChild(row);
                    localStorage.setItem("count", count);
                    localStorage.setItem("array", JSON.stringify(array));
                });
                $("#addTable").click(function(){
                    addDataIntoTable();
                    $("#id01").toggle();
                });
                $("#editTable").click(function(){
                    editData();
                    $("#id02").toggle();
                });
            });
        </script>
	</head>
	<body  onload="loadData();" id="weekEnd">   
        <div>
