
<web-app>
	<display-name>Archetype Created Web Application</display-name>
	<welcome-file-list>
    <welcome-file>loginPage.jsp</welcome-file>
</welcome-file-list>
	<context-param>
		<param-name>DB_CONNECTION</param-name>
		<param-value>jdbc:mysql://localhost:3306/servletDB</param-value>
	</context-param>
	<context-param>
		<param-name>DB_USERNAME</param-name>
		<param-value>root</param-value>
	</context-param>
	<context-param>
		<param-name>DB_PASSWORD</param-name>
		<param-value>qwerty</param-value>
	</context-param> 
	<filter>
		<description>
		</description>
		<display-name>AuthenticationFilter</display-name>
		<filter-name>AuthenticationFilter</filter-name>
		<filter-class>com.servlet.assignment.AuthenticationFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>AuthenticationFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<listener>
		<listener-class>com.servlet.assignment.ContextDBListener</listener-class>
	</listener>
	<servlet>
		<servlet-name>Register</servlet-name>
		<display-name>Register</display-name>
		<description></description>
		<servlet-class>com.servlet.assignment.Register</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>LoginAuthentication</display-name>
		<servlet-name>LoginAuthentication</servlet-name>
		<servlet-class>com.servlet.assignment.LoginAuthentication</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<servlet-name>PasswordChange</servlet-name>
		<servlet-class>com.servlet.assignment.PasswordChange</servlet-class>
	</servlet>
	<servlet>
		<description>
		</description>
		<display-name>Logout</display-name>
		<servlet-name>Logout</servlet-name>
		<servlet-class>com.servlet.assignment.Logout</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Register</servlet-name>
		<url-pattern>/Register</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LoginAuthentication</servlet-name>
		<url-pattern>/LoginAuthentication</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>PasswordChange</servlet-name>
		<url-pattern>/PasswordChange</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Logout</servlet-name>
		<url-pattern>/Logout</url-pattern>
	</servlet-mapping>
</web-app>
