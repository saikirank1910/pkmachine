		secondRatingObject.setRatingId(3);
		secondRatingObject.setSkillId(5);
	}

	@Test
	public void testAddSkillsRating() {
		buildPanelSkills();
		assertEquals(true, panelEvaluationDao.addSkillsRating(panelSkillsRating));
	}

