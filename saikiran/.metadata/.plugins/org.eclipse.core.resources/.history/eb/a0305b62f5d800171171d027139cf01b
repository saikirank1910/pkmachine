package com.saikiran.threads;
import java.io.BufferedWriter;
import java.io.FileWriter;
import java.io.IOException;


public class ThreadsExample3{
	public static void main(String[] args) throws IOException {
		FileWriter fileWritter = new FileWriter("D:\\saikiran\\newEclipse\\ThreadsAssignment\\input1");
		BufferedWriter bw = new BufferedWriter(fileWritter);
		for(int i=0;i<10;i++) {
			Thread t = new Thread(new ThreadDemo(), "thread " + i);
			t.start();
			try {
				t.join();
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
 			bw.append(t.getName()+"\n");
		}
		bw.close();
		fileWritter.close();
	}
}
