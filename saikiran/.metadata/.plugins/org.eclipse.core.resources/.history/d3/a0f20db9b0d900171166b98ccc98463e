package com.sai.bestCodingPractices.two;

public class Shape
{
	final static int TYPELINE=0;
	final static int TYPERECTANGLE=1;
	final static int TYPECIRCLE=2;
	int shape Type;
	Pointp1;
	//endingpointoftheline.
	//upperrightcorneroftherectangle.
	//notusedforthecircle.
	Pointp2;
	intradius;
	publicintgetType(){
	returnshapeType;
	}
	publicvoidsetShapeType(intshapeType){
	this.shapeType=shapeType;
	}
	publicPointgetP1(){
	returnp1;
	}
	publicvoidsetP1(Pointp1){
	this.p1=p1;
	}
	publicPointgetP2(){
	returnp2;
	}
	publicvoidsetP2(Pointp2){
	this.p2=p2;
	}
	publicintgetRadius(){
	returnradius;
	}
	publicvoidsetRadius(intradius){
	this.radius=radius;
	}
}