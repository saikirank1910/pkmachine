package com.saikiran.threads;

import java.io.BufferedWriter;
import java.io.FileWriter;
import java.io.IOException;

//Write a program to span 10 threads T1,T2,T3.... and thread names should be written in an orderly fashion in to a file i.e. in the file order should be T1,T2,T3,T4,T5,T6,T7,T8,T9,T10,T1,T2,T3,T4.....repeat the order 100 times


public class ThreadsExample4 {
	public static void main(String[] args) throws IOException {
		FileWriter fileWritter = new FileWriter("D:\\saikiran\\newEclipse\\ThreadsAssignment\\input2");
		BufferedWriter bw = new BufferedWriter(fileWritter);
		for(int j=0;j<100;j++)
		for(int i=0;i<10;i++) {
			Thread t = new Thread(new ThreadDemo(), "thread " + (i+1));
			t.start();
 			bw.append(t.getName()+"\n");
		}
		bw.close();
		fileWritter.close();
	}
}
